package csu;

//The first week of classes
//importing the scanner
import java.util.Scanner;

public class Formula {
	
	public static void main(String[] args) {
		
		//applying the scanner
		Scanner user = new Scanner(System.in);
		
		//initializing the integers 
		int a, b, area, peri;
		
		//asking the user for the first number
		System.out.print("Enter an integer: ");
		a = user.nextInt();
		
		//ask the user for the second number
		System.out.print("Enter another interger: ");
		b = user.nextInt();
		
		//formula for the area and peri. of a rectangle
		area = a * b;
		peri = 2 * (a + b);
		
		//presenting the area
		System.out.println("The area of the recangle is: " + area);
		
		//presenting the peri
		System.out.println("The perimeter of the recatngle is " + peri);
		
		user.close();
	}
}
